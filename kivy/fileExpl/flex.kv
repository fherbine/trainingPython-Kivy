ScreenHandler:
    ExplorerScreen:
        name: 'explorer'

    EditorScreen:
        name: 'editor'

<ExplorerScreen>:
    sub_container: scontainer

    GridLayout:
        canvas.before:
            Color:
                rgba: 0, 0, .7, 1
            Rectangle:
                pos: self.pos
                size: self.size
        rows: 2
    
        BoxLayout:
            padding: 10, 0, 10, 20
            orientation: 'horizontal'
            size_hint_y: .1
    
            Button:
                text: '<=='
                size_hint_x: .1
                on_press: root.update_dir('../')
    
            TextInput:
                text: app.dirInfos['cd']
    
        StackLayout:
            orientation: 'lr-tb'
            spacing: 5
            padding: 10
            id: scontainer


<EditorScreenLayout@BoxLayout>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
