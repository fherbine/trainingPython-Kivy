<MyBut@Button>:
	font_size: 30

<CalcGrid>:
	id: calculator
	display: calInput
	rows: 7
	TextInput:
		id: calInput
	
	BoxLayout:
		MyBut:
			size_hint_x: 1
			text: "AC"
			on_press: calInput.text = ""
		MyBut:
			text: "/"
			on_press: calInput.text += self.text
		MyBut:
			text: "*"
			on_press: calInput.text += self.text

	BoxLayout:
		MyBut:
			text: "7"
			on_press: calInput.text += self.text
		MyBut:
			text: "8"
			on_press: calInput.text += self.text
		MyBut:
			text: "9"
			on_press: calInput.text += self.text

	BoxLayout:
		MyBut:
			text: "4"
			on_press: calInput.text += self.text
		MyBut:
			text: "5"
			on_press: calInput.text += self.text
		MyBut:
			text: "6"
			on_press: calInput.text += self.text

	BoxLayout:
		MyBut:
			text: "1"
			on_press: calInput.text += self.text
		MyBut:
			text: "2"
			on_press: calInput.text += self.text
		MyBut:
			text: "3"
			on_press: calInput.text += self.text

	BoxLayout:
		MyBut:
			text: "%"
			on_press: calInput.text += self.text
		MyBut:
			text: "0"
			on_press: calInput.text += self.text
		MyBut:
			text: "."
			on_press: calInput.text += self.text	

	BoxLayout:
		MyBut:
			text: "-"
			on_press: calInput.text += self.text
		MyBut:
			text: "+"
			on_press: calInput.text += self.text
		MyBut:
			text: "="
			on_press: calculator.do_op(calInput.text)
