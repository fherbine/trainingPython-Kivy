BoxLayout:
    orientation: 'vertical'

    ShadowLabel:
        text: 'test ' * 10
        decal: 10, -10
        tint: .5, .5, .5, .5
        color: 1, 1, 0, 1

    ShadowLabel:
        text: 'test test'
        decal: 5, -5
        tint: .1, .5, .5, .5
        color: 1, 0, 1, 1

    Widget:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        ShadowLabel:
            text: 'test'
            decal: 2, -2
            tint: .5, .5, 1, .5
            color: 1, 0, 0, 1
            pos: self.parent.pos
            size: self.parent.size


<ShadowLabel>:
    canvas.before:
        Color:
            rgba: root.tint

        Rectangle:
            pos:
                int(self.center_x - self.texture_size[0] / 2.) + root.decal[0],\
                int(self.center_y - self.texture_size[1] / 2.) + root.decal[1]

            size: root.texture_size
            texture: root.texture

        Color:
            rgba: 1, 1, 1, 1
