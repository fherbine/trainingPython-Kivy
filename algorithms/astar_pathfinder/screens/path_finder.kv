<PathFinderScreen>:
    action: ''
    arrival_tile: None
    departure_tile: None
    container: container

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: .3
            spacing: dp(40)
            padding: (dp(20),)

            Button:
                text: 'place departure'
                on_release: root.action = 'departure'

            Button:
                text: 'place arrival'
                disabled: not bool(root.departure_tile)
                on_release: root.action = 'arrival'

            Button:
                text: 'place wall' if root.action != 'wall' else 'done'
                on_release: root.action = 'wall' if root.action != 'wall' else ''

            Button:
                text: 'reset'
                on_release: root.reset()

        GridLayout:
            id: container
