<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        pos_hint: {'center': (.5, .5)}
        size_hint: .5, .5

        BoxLayout:
            Label:
                text: 'width:'

            TextInput:
                id: width
                text: '10'
                multiline: False

            Label:
                text: 'height:'

            TextInput:
                id: height
                text: '10'
                multiline: False

        Button:
            text: 'distance/calculation mode'
            on_press: root.do_pathfinder_calc_mode(width.text, height.text)

        Button:
            text: 'simulation mode'
